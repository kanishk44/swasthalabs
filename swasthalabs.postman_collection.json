						"header": [
							{
								"key": "Authorization",
								"value": "Bearer {{cron_secret}}"
							}
						],
						"url": {
							"raw": "{{base_url}}/api/cron/worker",
							"host": [
								"{{base_url}}"
							],
							"path": [
								"api",
								"cron",
								"worker"
							]
						}
					},
					"response": []
				},
